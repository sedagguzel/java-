/* 
 * In this example, the java programme will calculate the tuition ans ratio is 0.06.
 */
import java.util.Scanner;

public class Exercise_05_07 {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("Please, enter the amount of the year");
		int num = input.nextInt();
		int totalCost = 0;
		System.out.println("Please enter the tuition");
		int tuition = input.nextInt();
		int tuitionPerYear = 0;
		for (int year = 1; year <= num; year++) {
			tuition += (tuition * 0.06);
			if (year > 10) {
				totalCost += tuition;
			}
			if (year == 10) {
				tuitionPerYear = tuition;
			}
		}
		System.out.println("Tuition in ten years: € " + tuitionPerYear + " worth of tuition "
				+ "after the tenth year: € " + totalCost);
	}

}
